<div class='container mt-5 schedule'>

  <h2>NEXT RACES</h2>
  <hr />

  {{#each newRaces}}
    <div>
      <br />
      <h3>Round {{round}}</h3>
      <br />
      <h3>Circuit {{Circuit.circuitName}}</h3>
      <br />
      <h4>{{date}} / {{Circuit.Location.locality}} ({{Circuit.Location.country}})</h4>
      <br />
      <hr />
    </div>
  {{/each}}

  <br />
  <br />
  <br />
  <h2>PAST RACES</h2>
  <hr />

  {{#each oldRaces}}
    <div>
      <br />
      <h3>Round {{round}}</h3>
      <br />
      <h3>Circuit {{Circuit.circuitName}}</h3>
      <br />
      <h4>{{date}} / {{Circuit.Location.locality}} ({{Circuit.Location.country}})</h4>
      <br />
      <hr />
    </div>
  {{/each}}

  <div class='container'>
    <br />
    <br />
    <br />
    <h2>Circuits Location</h2>
    <hr />
    <figure id='myMap'></figure>
  </div>
  <script src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js'></script>
  <script src='/js/circuits-map.js'></script>
  <script src='https://maps.googleapis.com/maps/api/js?key=AIzaSyA-m5wqt0HAtZNIspTAPkR71XfKggwWX_0&callback=init'></script>

</div>