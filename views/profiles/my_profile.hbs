<div class='container profile mt-4'>

  <div class='row'>

    <div class='col-5'>
      <figure class='profile-img'>
        <img src='{{user.avatar}}' alt='{{user.username}}' />
      </figure>
    </div>

    <div class='col-7 d-grid'>

      <div class='row d-flex justify-content-between'>
        <div class='col'>
          <h1>@{{user.username}}</h1>
          <h2>{{user.team}}</h2>
        </div>
        <div class='col-2'>
          <a href='/profile/edit' class='btn btn-dark'>Edit</a>
        </div>
        <div class='row'>
          <div class='col'>
            <div class='card'>
              <div class='card-body'>
                <p>{{user.bio}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class='row mt-3'>
    <div class='d-grid'>
      <div class='btn-group shadow' role='group' aria-label='Basic radio toggle button group'>
        <input type='radio' class='btn-check' name='btnradio' id='profile' autocomplete='off' checked />
        <a href='/profile' class='btn btn-outline-primary' for='profile'>POSTS</a>

        <input type='radio' class='btn-check' name='btnradio' id='profile' autocomplete='off' />
        <a href='/profile/posts/{{user.team}}' class='btn btn-outline-primary' for='profile'>#{{user.team}}</a>

        <input type='radio' class='btn-check' name='btnradio' id='favs' autocomplete='off' />
        <a href='/profile/favs' class='btn btn-outline-primary' for='favs'>FAVS</a>
      </div>
    </div>
  </div>

  <div class='row mt-3'>
    <div class='col'>
      {{#each posts}}
        <a href='/community/{{category}}/post/{{_id}}' class='mb-3 d-grid btn btn-dark'>
          <div class='card'>
            <div class='card-body'>
              <h3>{{text}}</h3>
            </div>
          </div>
        </a>
      {{/each}}
    </div>
  </div>

</div>