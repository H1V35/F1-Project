<div class='container mt-4'>

  <div class='row'>

    <div class='col'>
      <figure>
        <img src='{{user.avatar}}' alt='{{user.username}}' />
      </figure>
    </div>
    <div class='col'>

      <h1>{{user.username}}</h1>
      <h2>{{user.team}}</h2>

    </div>
    <p>{{user.bio}}</p>
  </div>

  <div class='row'>
    <div class='d-grid'>
      <div class='btn-group shadow' role='group' aria-label='Basic radio toggle button group'>
        <input type='radio' class='btn-check' name='btnradio' id='profile' autocomplete='off' checked />
        <a href='/profile' class='btn btn-outline-primary' for='profile'>POSTS</a>

        <input type='radio' class='btn-check' name='btnradio' id='favorite-posts' autocomplete='off' />
        <a href='/profile/favs' class='btn btn-outline-primary' for='favorite-posts'>FAVS</a>
      </div>
    </div>
  </div>

  <div class='row mt-3'>
    <div class='col'>
      {{#each posts}}
        <a href='/community/post/{{_id}}' class='mb-3 d-grid btn btn-dark shadow'>
          <div class='card'>
            <div class='card-body'>
              <h3>{{text}}</h3>
            </div>
          </div>
        </a>
      {{/each}}
    </div>
  </div>

</div>