<div class='container mt-4'>

  <div class='row'>

    <div class='col-5'>
      <figure>
        <img src='{{user.avatar}}' alt='{{user.username}}' />
      </figure>
    </div>

    <div class='col-7 d-grid'>

      <div class='row'>
        <div class='col'>
          <h1>@{{user.username}}</h1>
          <h2>{{user.team}}</h2>
          <div class='card'>
            <div class='card-body'>
              <p>{{user.bio}}</p>
            </div>
          </div>
        </div>
      </div>

      <div class='row d-flex justify-content-end align-items-end'>
        <div class='col-2 d-flex justify-content-end'>
          <a href='/sign-up' class='btn btn-dark'>Edit</a>
        </div>
        <div class='col-2 d-flex justify-content-end'>
          <a href='/sign-up' class='btn btn-login'>Delete</a>
        </div>
      </div>

    </div>
  </div>

  <div class='row mt-3'>
    <div class='d-grid'>
      <div class='btn-group shadow' role='group' aria-label='Basic radio toggle button group'>
        <input type='radio' class='btn-check' name='btnradio' id='profile' autocomplete='off' checked />
        <a href='/community/user/{{user.username}}' class='btn btn-outline-primary' for='profile'>POSTS</a>

        {{#if hasTeam}}
          <input type='radio' class='btn-check' name='btnradio' id='profile' autocomplete='off' />
          <a href='/community/user/{{user.username}}/posts/{{user.team}}' class='btn btn-outline-primary' for='profile'>#{{user.team}}</a>
        {{/if}}
      </div>
    </div>
  </div>

  <div class='row mt-3'>
    <div class='col'>
      {{#each posts}}
        <a href='/community/{{category}}/post/{{_id}}' class='mb-3 d-grid btn btn-dark'>
          <div class='card'>
            <div class='card-body'>
              <h3>{{text}}</h3>
            </div>
          </div>
        </a>
      {{/each}}
    </div>
  </div>

</div>