<div class='container mt-4'>

  <div class='row justify-content-between'>

    <div class='col-3'>
      <div class='btn-group shadow' role='group' aria-label='Basic radio toggle button group'>
        <input type='radio' class='btn-check' name='btnradio' id='general' autocomplete='off' />
        <a href='/community/GENERAL' class='btn btn-outline-primary' for='general'>GENERAL</a>

        <input type='radio' class='btn-check' name='btnradio' id='team' autocomplete='off' checked />
        <a href='/community/{{user.team}}' class='btn btn-outline-primary' for='team'>{{user.team}}</a>
      </div>
    </div>

    <div class='col-1'>
      <div>
        <a href='/community/users' class='btn btn-dark btn-index shadow'>USERS</a>
      </div>
    </div>
  </div>

  <div class='row mt-3 justify-content-left'>

    <div class='col-4'>
      <div>
        <a href='/community/{{user.team}}/post/{{posts.0._id}}/new-reply' class='btn btn-dark shadow'>New Reply</a>
      </div>
    </div>
  </div>

  <hr />

  <h2>{{posts.0.title}}</h2>

  {{#if isFav}}
    <form action='/community/{{user.team}}/post/{{posts.0._id}}' method='POST'>
      <button type='submit' class='btn btn-login block shadow'>Fav</button>
    </form>
  {{else}}
    <form action='/community/{{user.team}}/post/{{posts.0._id}}' method='POST'>
      <button type='submit' class='btn btn-dark block shadow'>Fav</button>
    </form>
  {{/if}}

  {{#each posts}}
    <div class='mt-3 mb-5 card'>
      <div class='card-body'>
        <h2>@{{owner.username}}</h2>
        <br />
        <h3>{{text}}</h3>
      </div>
    </div>
  {{/each}}

</div>